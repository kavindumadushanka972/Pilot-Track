<form action="/api/users" onsubmit="return validate()" method="POST" id="add_user" >
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="" >
            <input type="text" name="name" value="" placeholder="Enter the Name" required>
        </div>
        <div class="form-group">
            <label for="emp_num" class="text-light">Employee Number</label>
            <input type="text" name="emp_num" value="" placeholder="Enter the employee number" required>
        </div>

        <div class="form-group">
            <label for="mob_num" class="text-light">Mobile Number</label>
            <input type="text" name="mob_num" id="mobi_num" value="" placeholder="Enter the Mobile Number">
        </div>

        <div class="form-group">
            <label for="Address" class="text-light">Address</label>
            <input type="text" name="address" value="" placeholder="Enter the Address">
        </div>
        
        <br>
        <div class="form-group">
            <label for="distance" class="text-light">Distance</label>
            <input type="text" name="distance" value=0 readonly>
        </div>

        <div class="form-group">
            <label for="turns" class="text-light">Turns</label>
            <input type="text" name="turns" value=0 readonly>
        </div>

        <div class="form-group">
            <label for="accidents" class="text-light">Accidents</label>
            <input type="text" name="accidents" value=0 readonly>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update" id="savebtn" >Save</button>
        </div>
    </div>
</form>


