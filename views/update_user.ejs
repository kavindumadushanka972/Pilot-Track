<!-- include header -->
<%-include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update user</h2>
            <span class="text-light">Use the below form to update an account</span>
        </div>
        <!-- form handeling -->
        <form onsubmit="return validate()" method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= users.id %>">
                    <input type="text" name="name" value="<%= users.name %>" placeholder="Mark Stoenis">
                </div>
                
                <div class="form-group">
                    <label for="emp_num" class="text-light">Employee Number</label>
                    <input type="text" name="emp_num" value="<%= users.emp_num %>" placeholder="Enter the address">
                </div>

                <div class="form-group">
                    <label for="mob_num" class="text-light">Mobile Number</label>
                    <input type="text" name="mob_num" value="<%= users.mob_num %>" placeholder="Enter the address">
                </div>
                
                <div class="form-group">
                    <label for="Address" class="text-light">Address</label>
                    <input type="text" name="address" value="<%= users.address %>" placeholder="Enter the address">
                </div>
                
                <div class="form-group">
                    <label for="current-distance" class="text-light">Current Distance in km</label>
                    <input type="text" name="distance" readonly value=<%= users.distance %>>
                    <label for="current-distance" class="update">Enter the Distance to be added in km</label>
                    <input type="text" name="distance_update" value="0" id="dis_update">
                </div>
                
                <div class="form-group">
                    <label for="turns" class="text-light">Current Number of Turns</label>
                    <input type="text" name="turns" readonly value=<%= users.turns %>>
                    <label for="turns" class="update">Enter the number of turns to be added</label>
                    <input type="text" name="turns_update" value="0" id="turns_update">
                </div>

                <div class="form-group">
                    <label for="accidents" class="text-light">Current Number of Accidents</label>
                    <input type="text" name="accidents" readonly value=<%= users.accidents %>>
                    <label for="accidents" class="update">Enter the number of Accidents to be added</label>
                    <input type="text" name="accidents_update" value="0" id="acc_update">
                </div>

               
                <div class="form-group">
                    <button type="submit" class="btn text-dark update" id="savebutton">Save</button>
                </div>
            </div>
        </form>
        <!-- /form handeling -->
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%-include('include/_footer') %>
<!-- /include footer -->
